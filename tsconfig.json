{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": ["ES2018", "DOM"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./",
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"include": ["**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
